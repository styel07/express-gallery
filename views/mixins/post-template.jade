//- create a mixin
mixin generatePosts(post)
    each postItem in post
      //- places each image in a div
      a(href='/gallery/#{postItem.id}')
        div.small-4.medium-4.large-4.columns
          img(src=postItem.url)
          label #{postItem.description}
          label #{postItem.url}
        //- for every 3 images create a horizontal row
        if (index + 1) % 3 === 0
          <hr>
